{% extends "Ceres::PageDesign.PageDesign" %}

{% block PageBody %}
<div class="returns-portal-tracking container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2">{{ trans("ReturnsPortal::Template.trackReturn") }}</h1>
                <a href="/my-returns" class="btn btn-sm btn-outline-secondary">
                    {{ trans("ReturnsPortal::Template.myReturns") }}
                </a>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="h5 mb-0">{{ trans("ReturnsPortal::Template.returnNumber") }}: {{ return.return_number }}</h3>
                        <span class="badge bg-light text-dark">{{ currentStatus }}</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>{{ trans("ReturnsPortal::Template.orderNumber") }}:</strong> #{{ return.order_id }}</p>
                            <p><strong>{{ trans("ReturnsPortal::Template.created") }}:</strong> {{ return.created_at | date("d.m.Y H:i") }}</p>
                            <p><strong>{{ trans("ReturnsPortal::Template.totalAmount") }}:</strong> {{ return.total_amount | currency }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>{{ trans("ReturnsPortal::Template.customerName") }}:</strong> {{ return.customer_name }}</p>
                            <p><strong>{{ trans("ReturnsPortal::Template.email") }}:</strong> {{ return.customer_email }}</p>
                            {% if return.tracking_number %}
                                <p><strong>{{ trans("ReturnsPortal::Template.trackingNumber") }}:</strong> {{ return.tracking_number }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status Timeline -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="h5 mb-0">{{ trans("ReturnsPortal::Template.returnStatus") }}</h3>
                </div>
                <div class="card-body">
                    <div class="return-timeline">
                        <div class="timeline-item {{ return.status == 'pending' or return.status == 'approved' or return.status == 'shipped' or return.status == 'received' or return.status == 'refunded' or return.status == 'completed' ? 'active' : '' }}">
                            <div class="timeline-marker">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="timeline-content">
                                <h4>{{ trans("ReturnsPortal::Template.statusPending") }}</h4>
                                <p class="text-muted">{{ trans("ReturnsPortal::Template.statusPendingDesc") }}</p>
                                <small>{{ return.created_at | date("d.m.Y H:i") }}</small>
                            </div>
                        </div>

                        <div class="timeline-item {{ return.status == 'approved' or return.status == 'shipped' or return.status == 'received' or return.status == 'refunded' or return.status == 'completed' ? 'active' : '' }}">
                            <div class="timeline-marker">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="timeline-content">
                                <h4>{{ trans("ReturnsPortal::Template.statusApproved") }}</h4>
                                <p class="text-muted">{{ trans("ReturnsPortal::Template.statusApprovedDesc") }}</p>
                                {% if return.approved_at %}
                                    <small>{{ return.approved_at | date("d.m.Y H:i") }}</small>
                                {% endif %}
                            </div>
                        </div>

                        <div class="timeline-item {{ return.status == 'shipped' or return.status == 'received' or return.status == 'refunded' or return.status == 'completed' ? 'active' : '' }}">
                            <div class="timeline-marker">
                                <i class="fas fa-shipping-fast"></i>
                            </div>
                            <div class="timeline-content">
                                <h4>{{ trans("ReturnsPortal::Template.statusShipped") }}</h4>
                                <p class="text-muted">{{ trans("ReturnsPortal::Template.statusShippedDesc") }}</p>
                            </div>
                        </div>

                        <div class="timeline-item {{ return.status == 'received' or return.status == 'refunded' or return.status == 'completed' ? 'active' : '' }}">
                            <div class="timeline-marker">
                                <i class="fas fa-box-open"></i>
                            </div>
                            <div class="timeline-content">
                                <h4>{{ trans("ReturnsPortal::Template.statusReceived") }}</h4>
                                <p class="text-muted">{{ trans("ReturnsPortal::Template.statusReceivedDesc") }}</p>
                                {% if return.received_at %}
                                    <small>{{ return.received_at | date("d.m.Y H:i") }}</small>
                                {% endif %}
                            </div>
                        </div>

                        <div class="timeline-item {{ return.status == 'refunded' or return.status == 'completed' ? 'active' : '' }}">
                            <div class="timeline-marker">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                            <div class="timeline-content">
                                <h4>{{ trans("ReturnsPortal::Template.statusRefunded") }}</h4>
                                <p class="text-muted">{{ trans("ReturnsPortal::Template.statusRefundedDesc") }}</p>
                                {% if return.refunded_at %}
                                    <small>{{ return.refunded_at | date("d.m.Y H:i") }}</small>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if return.status == 'rejected' %}
                        <div class="alert alert-danger mt-4">
                            <h4 class="alert-heading">{{ trans("ReturnsPortal::Template.returnRejected") }}</h4>
                            <p>{{ trans("ReturnsPortal::Template.reason") }}: {{ return.rejection_reason }}</p>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Return Items -->
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="h5 mb-0">{{ trans("ReturnsPortal::Template.returnedItems") }}</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>{{ trans("ReturnsPortal::Template.product") }}</th>
                                    <th>{{ trans("ReturnsPortal::Template.quantity") }}</th>
                                    <th>{{ trans("ReturnsPortal::Template.price") }}</th>
                                    <th>{{ trans("ReturnsPortal::Template.reason") }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in return.items %}
                                    <tr>
                                        <td>{{ item.item_name }}</td>
                                        <td>{{ item.quantity }}</td>
                                        <td>{{ item.price | currency }}</td>
                                        <td>{{ item.reason }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between">
                <a href="/returns" class="btn btn-secondary">
                    {{ trans("ReturnsPortal::Template.backToReturns") }}
                </a>
                {% if return.status == 'approved' %}
                    <a href="/returns/print-label/{{ return.id }}" class="btn btn-primary" target="_blank">
                        <i class="fas fa-print"></i> {{ trans("ReturnsPortal::Template.printLabel") }}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
.return-timeline {
    position: relative;
    padding-left: 50px;
}

.timeline-item {
    position: relative;
    padding-bottom: 30px;
    opacity: 0.5;
}

.timeline-item.active {
    opacity: 1;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: -35px;
    top: 30px;
    width: 2px;
    height: calc(100% - 10px);
    background: #dee2e6;
}

.timeline-item:last-child::before {
    display: none;
}

.timeline-marker {
    position: absolute;
    left: -45px;
    top: 0;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #dee2e6;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    color: white;
}

.timeline-item.active .timeline-marker {
    background: #0d6efd;
}

.timeline-content h4 {
    font-size: 1.1rem;
    margin-bottom: 5px;
}

.timeline-content p {
    margin-bottom: 5px;
    font-size: 0.9rem;
}
</style>
{% endblock %}
