<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | default('Retouren Portal') }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ plugin_path('ReturnsPortal') }}/css/return-portal.css">
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">
                            <i class="bi bi-arrow-return-left"></i>
                            {{ trans('ReturnsPortal::messages.returnsPortal') }}
                        </h2>
                    </div>
                    <div class="card-body p-4">
                        <p class="lead mb-4">
                            {{ trans('ReturnsPortal::messages.returnsIntro') }}
                        </p>

                        <!-- Start Return Request Form -->
                        <div class="mb-5">
                            <h4 class="mb-3">{{ trans('ReturnsPortal::messages.startReturnRequest') }}</h4>
                            <form id="returnSearchForm" class="needs-validation" novalidate>
                                <div class="row g-3">
                                    <div class="col-md-8">
                                        <label for="orderNumber" class="form-label">
                                            {{ trans('ReturnsPortal::messages.orderNumber') }}
                                        </label>
                                        <input 
                                            type="text" 
                                            class="form-control form-control-lg" 
                                            id="orderNumber" 
                                            name="orderNumber"
                                            placeholder="z.B. 123456" 
                                            required
                                        >
                                        <div class="invalid-feedback">
                                            {{ trans('ReturnsPortal::messages.pleaseEnterOrderNumber') }}
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-end">
                                        <button type="submit" class="btn btn-primary btn-lg w-100">
                                            <i class="bi bi-search"></i>
                                            {{ trans('ReturnsPortal::messages.findOrder') }}
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <div id="orderResult" class="mt-3"></div>
                        </div>

                        <!-- Track Existing Return -->
                        <div class="border-top pt-4">
                            <h4 class="mb-3">{{ trans('ReturnsPortal::messages.trackExistingReturn') }}</h4>
                            <form id="trackReturnForm" class="needs-validation" novalidate>
                                <div class="row g-3">
                                    <div class="col-md-8">
                                        <label for="returnNumber" class="form-label">
                                            {{ trans('ReturnsPortal::messages.returnNumber') }}
                                        </label>
                                        <input 
                                            type="text" 
                                            class="form-control form-control-lg" 
                                            id="returnNumber" 
                                            name="returnNumber"
                                            placeholder="z.B. RET-1234567890-1234" 
                                            required
                                        >
                                        <div class="invalid-feedback">
                                            {{ trans('ReturnsPortal::messages.pleaseEnterReturnNumber') }}
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-end">
                                        <button type="submit" class="btn btn-secondary btn-lg w-100">
                                            <i class="bi bi-geo-alt"></i>
                                            {{ trans('ReturnsPortal::messages.trackReturn') }}
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <!-- Info Box -->
                        <div class="alert alert-info mt-4">
                            <h5 class="alert-heading">
                                <i class="bi bi-info-circle"></i>
                                {{ trans('ReturnsPortal::messages.importantInformation') }}
                            </h5>
                            <ul class="mb-0">
                                <li>{{ trans('ReturnsPortal::messages.returnPeriodInfo') }}</li>
                                <li>{{ trans('ReturnsPortal::messages.originalConditionInfo') }}</li>
                                <li>{{ trans('ReturnsPortal::messages.processTimeInfo') }}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Order Search Form
        document.getElementById('returnSearchForm').addEventListener('submit', function(e) {
            e.preventDefault();
            if (!this.checkValidity()) {
                e.stopPropagation();
                this.classList.add('was-validated');
                return;
            }

            const orderNumber = document.getElementById('orderNumber').value;
            
            // Show loading
            const resultDiv = document.getElementById('orderResult');
            resultDiv.innerHTML = '<div class="alert alert-info">Suche Bestellung...</div>';

            // Search for order
            fetch('/returns/search-order?orderNumber=' + orderNumber)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.order) {
                        // Order found - redirect to create return page
                        window.location.href = '/returns/create/' + data.order.id;
                    } else {
                        resultDiv.innerHTML = '<div class="alert alert-warning">' + 
                            (data.message || 'Bestellung nicht gefunden') + 
                            '</div>';
                    }
                })
                .catch(error => {
                    resultDiv.innerHTML = '<div class="alert alert-danger">Fehler bei der Suche. Bitte versuchen Sie es erneut.</div>';
                });
        });

        // Track Return Form
        document.getElementById('trackReturnForm').addEventListener('submit', function(e) {
            e.preventDefault();
            if (!this.checkValidity()) {
                e.stopPropagation();
                this.classList.add('was-validated');
                return;
            }

            const returnNumber = document.getElementById('returnNumber').value;
            // Extract return ID from return number (format: RET-timestamp-random)
            window.location.href = '/returns/track/' + returnNumber;
        });
    </script>
</body>
</html>
